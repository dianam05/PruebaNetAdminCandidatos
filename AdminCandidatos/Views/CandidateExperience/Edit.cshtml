@model AdminCandidatos.Application.Commands.CandidateExperiences.UpdateCandidateExperienceCommand

@{
    ViewData["Title"] = "Editar experiencia";
}

<h2>Editar experiencia</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdCandidateExperience" />
    <input type="hidden" asp-for="IdCandidate" />

    <div class="form-group">
        <label asp-for="Company"></label>
        <input asp-for="Company" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Job"></label>
        <input asp-for="Job" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Salary"></label>
        <input asp-for="Salary" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="BeginDate"></label>
        <input asp-for="BeginDate" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" type="date" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-controller="Candidate" asp-action="Details" asp-route-id="@Model.IdCandidate" class="btn btn-secondary">Cancelar</a>
</form>
