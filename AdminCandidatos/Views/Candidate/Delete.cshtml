@model AdminCandidatos.Infrastructure.Models.Candidates

@{
    ViewData["Title"] = "Eliminar Candidato";
}

<h2>Eliminar Candidato</h2>

<h4>¿Estás seguro de que deseas eliminar este candidato?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Apellido</dt>
    <dd class="col-sm-10">@Model.Surname</dd>

    <dt class="col-sm-2">Correo</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Nacimiento</dt>
    <dd class="col-sm-10">@Model.Birthdate.ToShortDateString()</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="IdCandidate" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
